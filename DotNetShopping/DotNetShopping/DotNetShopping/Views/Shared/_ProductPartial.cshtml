@model DotNetShopping.Models.ProductBoxModel
@{
    var productName = DotNetShopping.Helpers.StringHelper.ClearFileName(Model.VariantName + " " + Model.ProductName);
}
<a href="@Url.Action("Product","ProductDetail",new { id = Model.VariantId,name=productName })">
    <div class="owl-item">
        <div class="item">
            <div class="item-area">
                <div class="product-image-area">
                    <img class="porto-lazyload porto-lazyload-loaded" data-src="~/ProductImage/@(Model.PhotoName)-3.jpg" style="display: inline;" src="~/ProductImage/@(Model.PhotoName)-3.jpg">
                    <div class="product-label"><span class="sale-product-icon">-10%</span></div>
                </div>
                <div class="details-area">
                    <h2 class="product-name"><a href="" title="@Model.VariantName - @Model.ProductName">@Model.VariantName - @Model.ProductName</a></h2>
                    <div class="price-box">
                        <p class="special-price">
                            <span class="price-label">Special Price</span>
                            <span class="price" id="product-price-388">
                                $@Model.UnitPrice
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>